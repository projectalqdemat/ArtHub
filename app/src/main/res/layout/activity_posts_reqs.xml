<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/post_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Post Requests"
        android:textColor="#5E35B1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- ImageView for post image -->
 <ImageView
        android:id="@+id/post_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
     android:layout_below="@id/post_title_text"
     android:layout_marginTop="16dp"/>
    <!--  android:src="@drawable/placeholder_image" -->

<!-- TextView for post content -->
        <TextView
            android:id="@+id/post_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image_view"
            android:layout_marginTop="16dp"
            android:text="Post Content"
            android:textColor="#5E35B1"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Buttons for accepting or rejecting the post -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_content_text"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Accept button -->
            <Button
                android:id="@+id/accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:backgroundTint="#7E57C2"
                android:layout_marginEnd="16dp"
                android:padding="12dp" />

            <!-- Reject button -->
            <Button
                android:id="@+id/reject_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="#FFFFFF"
                android:backgroundTint="#7E57C2"
                android:padding="12dp" />
        </LinearLayout>

    </RelativeLayout>